<div class="modal modal-blur fade" id="<%= modal_id %>" tabindex="-1" aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add new timeslot for procedure: <%= @procedure.name %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            
            <%= render 'timeslots/form', timeslot: timeslot  %>
            
          </div>
          <div class="modal-footer">
            <button type="button" class="btn me-auto bg-danger text-white" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>