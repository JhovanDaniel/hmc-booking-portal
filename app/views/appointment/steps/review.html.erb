<div class="card my-4">
  <div class="card-body">
    <div class="steps steps-counter">
      <a href="#" class="step-item">
        Appointment Information
      </a>
      <a href="#" class="step-item">
        Date and Time
      </a>
      <a href="#" class="step-item active">
        Review
      </a>
      <a href="#" class="step-item">
        Pay
      </a>
    </div>
  </div>
</div>
<%= simple_form_for(@appointment, :url => wizard_path, method: :put) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="form-inputs">
    <%= f.association :procedure, label: 'Procedure', disabled: true %>
    <%= f.input :appointment_number, disabled: true %>
    <%= f.input :first_name, disabled: true %>
    <%= f.input :last_name, disabled: true %>
    <%= f.input :date_of_birth, disabled: true %>
    <%= f.input :gender, disabled: true %>
    <%= f.input :phone, disabled: true %>
    <%= f.input :email, disabled: true %>
    <%= f.input :date, disabled: true %>
    <%= f.input :time, disabled: true %>
  </div>
  
  <div class='mt-4'>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-cash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
       <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
       <rect x="7" y="9" width="14" height="10" rx="2"></rect>
       <circle cx="14" cy="14" r="2"></circle>
       <path d="M17 9v-2a2 2 0 0 0 -2 -2h-10a2 2 0 0 0 -2 2v6a2 2 0 0 0 2 2h2"></path>
    </svg>
    Procedure Cost: <strong>USD <%= @appointment.appointment_cost %></strong>
  </div>
  
  <div class="form-actions my-4">
    <%= link_to 'Previous Step', previous_wizard_path, class: "btn" %>
    <%= link_to 'Next Step', next_wizard_path, class: "btn btn-primary" %>
  </div>
  
<% end %>