<%= simple_form_for(@appointment) do |f| %>

  <h3>Appointment Information</h3>
  <div class="form-inputs">
    <%= f.input :appointment_number %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth %>
    <%= f.input :gender %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :date %>
    <%= f.input :time %>
    
    <% if @appointment.procedure_id %>
      <%= f.input :procedure_id, as: :hidden, :input_html => { :value => @appointment.procedure_id } %>
    <% else %>
      <%= f.input :procedure_id, collection: Procedure.all %>
    <% end %>
    
    <% if current_user %>
      <%= f.input :user_id, collection: User.doctors  %>
    <% end %>
  </div>

  <div class="form-actions mt-2">
    <%= f.button :submit %>
  </div>
<% end %>
