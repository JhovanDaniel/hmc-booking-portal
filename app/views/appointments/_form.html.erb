<%= simple_form_for(@appointment) do |f| %>

  <h3>Appointment Information</h3>
  <div class="form-inputs">
    <%= f.input :appointment_number %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth, as: :date, html5: true %>
    <%= f.input :gender, as: :radio_buttons, wrapper: :vertical_collection_inline, collection: User::GENDER %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :date, as: :date, html5: true %>
    <%= f.input :time, as: :time, html5: true %>
    
    <% if @appointment.procedure_id %>
      <%= f.input :procedure_id, as: :hidden, :input_html => { :value => @appointment.procedure_id } %>
    <% else %>
      <%= f.input :procedure_id, collection: Procedure.all %>
    <% end %>
    
    <% if current_user %>
      <%= f.input :user_id, collection: User.doctors  %>
    <% end %>
  </div>

  <div class="form-actions mt-2">
    <%= f.button :submit %>
  </div>
<% end %>
